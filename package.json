{
  "name": "build-o-matic",
  "version": "0.1.0",
  "description": "Business Tool Vending Machine - Generate custom tools in 10 seconds",
  "type": "module",
  "private": true,
  "workspaces": [
    "generator",
    "templates/*",
    "frontend",
    "server",
    "deployer",
    "billing",
    "docs"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:frontend",
    "dev:server": "tsx watch server/index.ts",
    "dev:frontend": "vite --config frontend/vite.config.ts",
    "build": "npm-run-all build:server build:frontend",
    "build:server": "tsc -p server/tsconfig.json",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "start": "node server/dist/index.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "PWDEBUG=1 playwright test --debug"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "stripe": "^14.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.2",
    "@types/supertest": "^2.0.16",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.8",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
