{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "..",
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "../generator/**/*.ts",
    "../adapters/**/*.ts",
    "../deployer/**/*.ts",
    "../billing/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}